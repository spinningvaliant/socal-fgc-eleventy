---
title: Tagged posts
layout: tag_pages.njk
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - posts
permalink: "/tags/{{ tag | slugify }}.html"
---
	
<!--Displays the posts that have this tag-->
<ul>
{% set taglist = collections[ tag ] %}
{% for post in taglist | reverse %}
  <li class="archives"><a href="{{ post.url }}">{{ post.data.title }}</a> <em>{{ post.date | readableDate }}</em> Â» {{ post.data.description }}</li>
{% endfor %}
</ul>